{
    "$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/regionGroups_1_000/jsonschema/schemas/RegionGroups_1_000.json#",
    "info": {
        "description": "API para a entidade Grupo de Região (Region Group) para produtos TOTVS",
        "version": "2.000",
        "title": "RegionGroups",
        "contact": {
            "name": "T-Talk",
            "url": "api.Totvs.com.br",
            "email": "comiteintegracao@totvs.com.br"
        },
        "x-totvs": {
            "transactionDefinition": {
                "subType": "event",
                "businessContentType": {
                    "type": "object",
                    "$ref": "#/definitions/RegionGroupsInfo"
                },
                "returnContentType": {
                    "type": "object",
                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/ListOfInternalId_1_000.json#/definitions/ReturnContentWithModelType"
                }
            },
            "messageDocumentation": {
                "name": "RegionGroups",
                "description": "Cadastro de Grupo de Região",
                "segment": "TMS"
            },
            "productInformation": [
                {
                    "product":"protheus",
                    "contact":"supply.ml.log.tms-operacional@totvs.com.br",
                    "description":"Cadastro de Grupo de Região",
                    "adapter":"TMSA115I.prw"
                }
            ]
        }
    },
    "definitions": {
        "PagedRegionGroups":{
            "type":"object",
            "allOf":[
                {
                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/'regionGroups_1_000'/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
                },
                {
                    "$ref":"#/definitions/RegionGroups"
                }
            ]
        },
        "RegionGroups":{
            "type":"object",
            "properties":{
                "items":{
                    "type":"array",
                    "items":{
                        "$ref":"#/definitions/RegionGroupsInfo"
                    }
                }
            }
        },
        "RegionGroupsInfo":{
            "description": "Descreve um Grupo de Região",
            "type":"object",
            "properties": {
                "CompanyId":{
                    "type":"string",
                    "description":"Código da empresa",
                    "maxLength":3
                },
                "BranchId":{
                   "type":"string",
                   "description":"Código da Filial",
                   "example": "D MG 01 ",
                   "maxLength":12,
                   "x-totvs":[
                        {
                            "product":"protheus",
                            "field":"DUY.DUY_FILIAL",
                            "required":true,                               
                            "length":"8",
                            "available":true,
                            "canUpdate":false
                        }
                    ]
                },
                "CompanyInternalId":{
                   "type":"string",
                   "description":"Código da Empresa",
                   "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "EMPRESA|DUY.DUY_FILIAL|DUY.DUY_GRVPEN",
                            "required": true,
                            "type": "varchar",
                            "length": "16",
                            "avialable": true,
                            "canUpdate": false
                        }
                    ]                       
                },
                "Code":{
                   "type":"string",
                   "description":"Código do Grupo de Região.",
                   "example": "Q50308",
                   "maxLength":6,
                   "x-totvs":[
                       {
                        "product": "protheus",
                        "field":"DUY.DUY_GRPVEN",
                        "type":"varchar",
                        "length": "6",
                        "required":true,
                        "avaliable":true,
                        "canUpdate": false
                       }
                   ]                       
                },
                "InternalId":{
                    "type":"string",
                    "description":"InternalId do Grupo de Região no ERP",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "DUY.DUY_FILIAL|DUY.DUY_GRPVEN",
                            "type": "varchar",
                            "length": "14",
                            "note":"O internalID do grupo de região é formado por DUY.DUY_FILIAL|DUY.DUY_GRPVEN"
                        }                         
                    ]
                },
                "Description": {
                    "type": "string",
                    "example": "Brasil",
                    "description": "Descrição do Grupo de Região",
                    "maxLength": 30,
                    "x-totvs": [
                      {
                        "product": "protheus",
                        "field": "DUY.DUY_DESCRI",
                        "required": true,
                        "type": "varchar",
                        "length": "30",
                        "available": true,
                        "canUpdate": true
                      }
                    ]
                  },
                  "TopGroup": {
                    "type": "string",
                    "example": "SP",
                    "description": "Código do Grupo Superior",
                    "x-totvs": [
                      {
                        "product": "protheus",
                        "field": "DUY.DUY_GRPSUP",
                        "required": true,
                        "type": "varchar",
                        "length": "6",
                        "available": true,
                        "canUpdate": false
                      }
                    ]
                  },
                  "State": {
                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/types/state_1_000.json#/components/schemas/StatesInfo"
                  },
                  "DestinationBranch": {
                    "type": "string",
                    "example": "M SP 01 ",
                    "description": "Filial",
                    "maxLength": 12,
                    "x-totvs": [
                      {
                        "product": "protheus",
                        "field": "DUY.DUY_FILDES",
                        "required": true,
                        "type": "varchar",
                        "length": "8",
                        "available": true,
                        "canUpdate": false
                      }
                    ]
                  },
                  "CodeAssociatedCompanyRegion": {
                    "type": "string",
                    "example": "Q56453",
                    "description": "Código da Região Coligada",
                    "x-totvs": [
                      {
                        "product": "protheus",
                        "field": "DUY.DUY_GRPSUP",
                        "required": true,
                        "type": "varchar",
                        "length": "6",
                        "available": true,
                        "canUpdate": false
                      }
                    ]
                  },
                  "AssociatedCompanyRegionDescription": {
                    "type": "string",
                    "example": "VARGEM GRANDE PAULISTA",
                    "description": "Descrição do Grupo de Região Coligada",
                    "maxLength": 30,
                    "x-totvs": [
                      {
                        "product": "protheus",
                        "field": "DUY.DUY_REGCOL",
                        "required": true,
                        "type": "varchar",
                        "length": "30",
                        "available": true,
                        "canUpdate": true
                      }
                    ]
                  },
                  "RegionCategory": {
                    "type": "string",
                    "example": "1-Praca a Praca",
                    "description": "Categoria da Região",
                    "enum": [
                      "1",
                      "2"
                    ],
                    "x-totvs": [
                      {
                        "product": "protheus",
                        "field": "DUY.DUY_CATREG",
                        "required": false,
                        "type": "varchar",
                        "length": "1",
                        "avialable": true,
                        "canUpdate": true,
                        "note": "1- Praca a Praca, 2- Regiao Base para Taxa"
                      }
                    ]
                  },
                  "BaseTaxRegion": {
                    "type": "string",
                    "example": "Q50308",
                    "description": "Código da Região Base para Taxa",
                    "x-totvs": [
                      {
                        "product": "protheus",
                        "field": "DUY.DUY_CDRTAX",
                        "required": true,
                        "type": "varchar",
                        "length": "6",
                        "available": true,
                        "canUpdate": false
                      }
                    ]
                  },
                  "GroupCategory": {
                    "type": "string",
                    "example": "3-Região",
                    "description": "Categoria do Grupo",
                    "enum": [
                      "1",
                      "2",
                      "3"
                    ],
                    "x-totvs": [
                      {
                        "product": "protheus",
                        "field": "DUY.DUY_CATGRP",
                        "required": false,
                        "type": "varchar",
                        "length": "1",
                        "avialable": true,
                        "canUpdate": true,
                        "note": "1- Estado, 2- Filial, 3- Regiao"
                      }
                    ]
                  },
                  "RegionExemptTaxes": {
                    "type": "string",
                    "example": "2-Não",
                    "description": "Região Isenta de Impostos",
                    "enum": [
                      "1",
                      "2"
                    ],
                    "x-totvs": [
                      {
                        "product": "protheus",
                        "field": "DUY.DUY_REGISE",
                        "required": false,
                        "type": "varchar",
                        "length": "1",
                        "avialable": true,
                        "canUpdate": true,
                        "note": "1- Sim, 2- Não"
                      }
                    ]
                  },
                  "ISSRate": {
                    "type": "number",
                    "example": "5,2",
                    "description": "Aliquota do ISS",
                    "x-totvs": [
                      {
                        "product": "protheus",
                        "field": "DUY.DUY_ALQISS",
                        "required": true,
                        "type": "number",
                        "length": "5,2",
                        "available": true,
                        "canUpdate": false
                      }
                    ]
                  },
                  "Country": {
                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/types/country_1_000.json#/components/schemas/CountriesInfo"
                  },
                  "City": {
                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/types/city_2_000.json#/components/schemas/CitiesInfo"
                  },
                  "TMSPortal": {
                    "type": "string",
                    "example": "2-Não",
                    "description": "Utiliza no portal TMS",
                    "enum": [
                      "1",
                      "2"
                    ],
                    "x-totvs": [
                      {
                        "product": "protheus",
                        "field": "DUY.DUY_PORTMS",
                        "required": false,
                        "type": "varchar",
                        "length": "1",
                        "avialable": true,
                        "canUpdate": true,
                        "note": "1- Sim, 2- Não"
                      }
                    ]
                  }
              } 
        }
    }
}