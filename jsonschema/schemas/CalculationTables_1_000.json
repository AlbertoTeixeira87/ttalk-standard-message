{
	"$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/CalculationTables/v1/1_000/jsonschema/schemas/events/CalculationTables_1_000.json#",
	"info": {
		"description": "API para a entidade tabela de cálculo (CalculationTable) para produtos TOTVS",
		"version": "1.000",
		"title": "CalculationTable",
		"contact": {
			"name": "T-Talk",
			"url": "API.Totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "CalculationTable",
				"description": "Tabela de Cálculo",
				"segment": "RH"
			},
			"productInformation": [{ 
				"product": "RM",
				"contact": "rm_FW@totvs.com.br",
				"description": "Listagem das tabelas de cálculo"
			}]
		}
	},
	"definitions": {
		"PagedCalculationTables": {
			"type": "object",
			"allOf": [{
				"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/CalculationTables/v1/1_000/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
			},
			{
				"type": "object",
				"properties": {
					"items": {
						"type": "array",
						"items": {
							"$ref": "#/definitions/CalculationTablesInfo"
						}
					}
				}
			}]
		},
		"CalculationTablesInfo": {
			"type": "object",
			"properties": {
				"companyCode": {
					"type": "integer",
					"example": "1",
					"description": "Código da Empresa"
				},
				"code": {
					"type": "string",
					"example": "INSS",
					"description": "Código da Tabela de Cálculo"
				},
							
				"startOfValidity": {
					"type": "datetime",
					"description": "Início de Vigência"
				},
				"name":{
					"type": "string",
					"description": "Nome da Tabela de Cálculo"
				},
				"endOfValidity":{
					"type": "datetime",
					"description": "Fim de Vigência"
				},
				"roundValue":{
					"type": "smallint",
					"description": "Indicativo de Arredondamento de Valor"
				},
				"disregardCents":{
					"type": "smallint",
					"description": "Despreza Centavos"
				},
				"finality":{
					"type": "smallint",
					"description": "Finalidade"
				},
				"updateValidity":{
					"type": "smallint",
					"description": "Atualiza Vigência"
				},
				"id": {
					"type": "string",
					"description": "Identificador da tabela de cálculo"
				}				
			}
		} 
  	}
}	