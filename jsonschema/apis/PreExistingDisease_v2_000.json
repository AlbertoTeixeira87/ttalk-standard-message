        "requestBody": {
          "description": "Doença pré-existente a ser incluída/alterada na integração.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/HealthProviderSpecialty/V1/1_100/jsonschema/schemas/PreExistingDisease_2_000.json#/definitions/PreExistingDisease"
              }
            }
          },
          "required": true
