{
  "openapi": "3.0.1",
  "servers": [
    {
      "description": "API para procedimentos/eventos em saúde",
      "url": "http://{serverUrl}:{serverHttpPort}/api/hat/healthcare/v1",
      "variables": {
        "serverUrl": {
          "default": "localhost"
        },
        "serverHttpPort": {
          "default": "4202"
        }
      }
    }
  ],
  "info": {
    "description": "API para procedimentos/eventos em saúde",
    "version": "1.100",
    "title": "Procedure",
    "contact": {
      "name": "T-Talk",
      "url": "http://api.totvs.com.br",
      "email": "comiteintegracao@totvs.com.br"
    },
    "x-totvs": {
      "messageDocumentation": {
        "name": "Procedure",
        "description": "Procedimentos/Eventos em saúde",
        "segment": "HealthCare"
      },
      "productInformation": [
        {
          "product": {
            "product": "HAT",
            "contact": "healthcare.autorizador@totvs.com.br",
            "description": "Operacoes referente as guias de atendimento de planos de saude no formato TISS"
          }
        }
      ]
    }
  },
  "paths": {
    "/procedures/": {
      "get": {
        "tags": [
          "procedures"
        ],
        "operationId": "getProcedures",
        "summary": "Dados dos atendimentos realizados.",
        "description": "Retorna uma mensagem do tipo colecao com os procedimentos. Os resultados podem ser filtrados atraves dos parametros procedureDescription, procedureCode e tableCode",
        "x-totvs": {
          "productInformation": [
            {
              "product": "HAT",
              "available": true,
              "note": "Este verbo está disponível com todos os parametros"
            }
          ]
        },
        "parameters": [
          {
            "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/parameters/Page"
          },
          {
            "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/parameters/PageSize"
          },
          {
            "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/parameters/Order"
          },
          {
            "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/parameters/Expand"
          },
          {
            "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/parameters/Fields"
          },
          {
            "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/parameters/Authorization"
          },
          {
            "$ref": "#/components/parameters/ExpiresAt"
          },
          {
            "$ref": "#/components/parameters/TableCode"
          },
          {
            "$ref": "#/components/parameters/ProcedureCode"
          },
          {
            "$ref": "#/components/parameters/ProcedureDescription"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/Procedure/V1/1_100/jsonschema/schemas/Procedure_1_100.json#/definitions/Procedures"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/ErrorModel"
                }
              }
            }
          }
        }
      }
    },
    "/procedures/{procedureId}": {
      "get": {
        "tags": [
          "procedures"
        ],
        "operationId": "getProcedure",
        "summary": "Dados dos atendimentos realizados.",
        "description": "Retorna uma mensagem com os dados de um procedimentos",
        "x-totvs": {
          "productInformation": [
            {
              "product": "HAT",
              "available": true,
              "note": "Este verbo está disponível com o parâmetro procedureId"
            }
          ]
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/ProcedureId"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/Procedure/V1/1_100/jsonschema/schemas/Procedure_1_100.json#/definitions/Procedure"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/ErrorModel"
                }
              }
            }
          }
        }
      }
    },
    "/procedures/requestAuth": {
      "post": {
        "tags": [
          "procedures"
        ],
        "operationId": "postProcedure",
        "summary": "Autorização de Procedimentos",
        "description": "O processamento de autorização de procedimentos é controlado por uma fila de processamento. Ao realizar uma requisição, o endpoint irá responder com codigo 202 indicando que a requisição foi adicionada a fila de processamento retornando um token de identificação, em seguida esse token deve ser utilizado nos parâmetros de URL para retornar a resposta de codigo 200 assim que o processamento for concluido",
        "x-totvs": {
          "productInformation": [
            {
              "product": "HAT",
              "available": true,
              "note": "Este verbo está disponível com todos os parâmetros formType e tokenId"
            }
          ]
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/FormType"
          },
          {
            "$ref": "#/components/parameters/TokenId"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/Procedure/V1/1_100/jsonschema/schemas/Procedure_1_100.json#/definitions/ProcedureData"
              }
            }
          },
          "description": "Informacoes do procedimento",
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/Procedure/V1/1_100/jsonschema/schemas/Procedure_1_100.json#/definitions/ProcedureData"
                }
              }
            }
          },
          "202": {
            "description": "Adicionou uma requisicao na fila de processamento",
            "headers": {
              "location": {
                "description": "URL onde o recurso estará disponível",
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/Authorization/V1/1_100/jsonschema/schemas/Authorization_1_100.json#/definitions/TokenProcessResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "ExpiresAt": {
        "name": "Expires_at",
        "in": "header",
        "description": "Data e hora da expiração do token em segundos",
        "required": true,
        "schema": {
          "type": "string"
        }
      },
      "TableCode": {
        "name": "tableCode",
        "in": "query",
        "description": "Codigo da tabela do procedimento",
        "required": false,
        "schema": {
          "type": "string"
        }
      },
      "ProcedureCode": {
        "name": "procedureCode",
        "in": "query",
        "description": "Codigo do procedimento",
        "required": false,
        "schema": {
          "type": "string"
        }
      },
      "ProcedureDescription": {
        "name": "procedureDescription",
        "in": "query",
        "description": "Descricao do procedimento",
        "required": false,
        "schema": {
          "type": "string"
        }
      },
      "ProcedureId": {
        "name": "procedureId",
        "in": "path",
        "description": "Tipo do atendimento",
        "required": true,
        "schema": {
          "type": "integer"
        }
      },
      "FormType": {
        "name": "formType",
        "in": "query",
        "description": "Identifica qual o tipo de atendimento que sera incluido",
        "required": true,
        "schema": {
          "type": "string"
        }
      },
      "TokenId": {
        "name": "tokenId",
        "in": "query",
        "description": "Token com a identificacao do item inserido na lista de processamento",
        "required": false,
        "schema": {
          "type": "string"
        }
      }
    }
  }
}