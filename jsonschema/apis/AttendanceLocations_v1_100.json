{
  "openapi": "3.0.1",
  "servers": [
    {
      "description": "API para os locais de atendimento dos prestadores de serviço das operadoras",
      "url": "http://{serverUrl}:{serverHttpPort}/api/hat/healthcare/v1",
      "variables": {
        "serverUrl": {
          "default": "localhost"
        },
        "serverHttpPort": {
          "default": "4202"
        }
      }
    }
  ],
  "info": {
    "description": "API para os locais de atendimento dos prestadores de serviço das operadoras",
    "version": "1.100",
    "title": "Attendance Locations",
    "contact": {
      "name": "T-Talk",
      "url": "http://api.totvs.com.br",
      "email": "comiteintegracao@totvs.com.br"
    },
    "x-totvs": {
      "messageDocumentation": {
        "name": "Attendance Locations",
        "description": "Locais de Atendimentos dos prestadores de serviço das operadoras",
        "segment": "HealthCare"
      },
      "productInformation": [
        {
          "product": {
            "product": "HAT",
            "contact": "healthcare.autorizador@totvs.com.br",
            "description": "Operações referente aos locais de atendimento dos prestadores de serviço das operadoras"
          }
        }
      ]
    }
  },
  "paths": {
    "/attendanceLocations": {
      "post": {
        "tags": [
          "attendanceLocations"
        ],
        "operationId": "healthProviderAttendancePlaceUpdate",
        "summary": "Inclusão e alteração de locais de atendimento",
        "description": "Permite a inclusão e alteração de locais de atendimento de prestadores da operadora.",
        "x-totvs": {
          "productInformation": [
            {
              "product": {
                "product": "HAT",
                "available": true,
                "description": "Este verbo esta disponível com os parâmetros Authorization, ExpiresAt",
                "adapter": "AutorizadorRest.prw"
              }
            }
          ]
        },
        "parameters": [
          {
            "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/parameters/Authorization"
          },
          {
            "$ref": "#/components/parameters/ExpiresAt"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/Refund_1_000.json#/definitions/Refund"
              }
            }
          },
          "description": "Informações enviadas para atualização de locais de atendimento dos prestadores"
        },
        "responses": {
          "202": {
            "description": "Atualização adicionada na fila para processamento.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/Refund_1_000.json#/definitions/Refund"
                }
              }
            }
          },
          "401": {
            "description": "Quantidade de itens do lote acima do permitido",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/ErrorModel"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "Authorization": {
        "name": "Authorization",
        "in": "header",
        "description": "Token de autorização",
        "required": true,
        "schema": {
          "type": "string"
        }
      },
      "ExpiresAt": {
        "name": "Expires_at",
        "in": "header",
        "description": "Data e hora da expiração do token em segundos",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    }
  }
}